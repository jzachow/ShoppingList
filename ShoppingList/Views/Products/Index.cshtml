@model IEnumerable<ShoppingListDAL.Models.Products>

@{
    ViewData["Title"] = "Index";
}

<h1>Products</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Name
                </td>
                <td>
                    @item.Price.ToString("c")
                </td>
                <td>
                    @Html.ActionLink("Add to Cart", "AddToCart", "Products", routeValues: new { productId = item.Id }, htmlAttributes: new { @class = "btn btn-primary" })
                </td>
            </tr>
        }      
    </tbody>
</table>
