@model ShoppingCartModel



    <h3>Shopping Cart</h3>
        <table class="table">
        <thead>
            <tr>
                <th>
                    Name
                </th>
                <th>
                   Price
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Cart)
            {
                <tr>
                    <td>
                        @item.Name
                    </td>
                    <td>
                        @item.Price.ToString("c")
                    </td>                    
                </tr>
            }
            <tr class="bg-secondary text-light">
                <td>
                    <p>Total:</p>
                </td>
                <td>
                     @Model.Total.ToString("c")
                </td>
            </tr>
        </tbody>
    </table>

